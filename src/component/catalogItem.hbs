<div class="card mt-5 my-2 p-3">
	<img class="card-img-top" src="{{img}}"></img>
	<div class="card-body p-1">
		{{#if isHot}} <span class="badge rounded-pill text-bg-warning text-uppercase mt-2">Hot!</span>{{/if}}
		{{#if isNew}} <span class="badge rounded-pill text-bg-primary mt-2">Нове</span> {{/if}}
		{{#if isFast}} <div class="btn btn-success btn-sm mt-3">Швидка доставка</div> {{/if}}
		{{#if isFree}} <div class="btn btn-secondary btn-sm mt-3">Безкоштовна доставка</div> {{/if}}
		<h3 class="mt-3">{{name}}</h3>

		{{#with review}}
		<p>{{amount}} {{text}}</p>
		{{/with}}
		<p>
		<h4>{{price}}</h4>
		</p>
		<p>{{delivery}}</p>
		{{#each buttons}}
		{{#if isPrimary}}
		<a href="{{link}}" class="btn btn-primary my-1">{{text}}</a>
		{{/if}}
		{{#if isSecondary}}
		<a href="{{link}}" class="btn btn-secondary my-1">{{text}}</a>
		{{/if}}
		{{/each}}
		{{#each characteristics}}
		<ul class="my-1">
			<li>{{title}} {{value}}</li>
		</ul>
		{{/each}}
	</div>
</div>