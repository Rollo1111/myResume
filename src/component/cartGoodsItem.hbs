<div class="card my-4">
	<div class="row">
		<div class="col-2 mx-1 my-2 ms-2">
			<img class="card-image-top" src="{{image}}">
		</div>

		<div class="col-4 mx-1 my-2">
			<div class="card-title">
				<h3>{{name}}</h3>
			</div>
			<div>
				<p>{{description}}</p>
			</div>
		</div>

		<div class="col-2 mx-1 my-2">
			{{#with price}}
			{{title}}
			<b>{{value}}</b>
			{{/with}}
		</div>

		<div class="col-1 mx-1 my-2">
			{{amount}}
		</div>

		<div class="col-2 mx-1 my-2">
			{{#each buttons}}
			{{#if isPrimary}}
			<button class="btn btn-primary btn-sm my-3">{{text}}</button>
			{{/if}}
			{{#if isDanger}}
			<button class="btn btn-outline-danger btn-sm">{{text}}</button>
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>