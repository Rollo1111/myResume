<div class="m-3">

	<hr class="mt-5">

	{{#with navigation}}
	<div class="nav">
		{{#each links}}
		<div class="nav-item">
			<a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
		</div>
		{{/each}}
	</div>
	{{/with}}

	<hr class="mb-5">

	{{#with formBlock}}
	<h1 class="mb-3">{{header}}</h1>

	<div class="row">
		<div class="col-8">
			<div class="my-3">
				{{#with rating}}
				{{title}} {{value}}
				{{/with}}
			</div>

			{{#with actionBlock}}
			<div class="nav nav-tabs">
				{{#each tabs}}
				<div class="nav-item">
					<div class="nav-link {{#if @last}} active {{/if}}">
						{{text}}
					</div>
				</div>
				{{/each}}
			</div>

			<hr class="my-5">

			<div class="card">
				{{#with report}}
				<div class="card-title m-3">
					<h5>{{title}}</h5>
				</div>
				{{#with button}}
				<a href="{{link}}" class="btn btn-secondary  btn-sm col-4 m-3">{{text}}</a>
				{{/with}}
				{{/with}}
			</div>
			{{/with}}

			<hr class="my-5">

			{{#with feedbackBlock}}
			<h2 class="my-5">{{title}}</h2>
			{{#each buttons}}
			{{#if isWarning}}
			<a href="{{link}}" class="btn btn-warning btn-sm me-3">{{text}}</a>
			{{/if}}
			{{#if isSuccess}}
			<a href="{{link}}" class="btn btn-success btn-sm me-3">{{text}}</a>
			{{/if}}
			{{#if isDanger}}
			<a href="{{link}}" class="btn btn-danger btn-sm">{{text}}</a>
			{{/if}}
			{{/each}}
			{{/with}}

		</div>

		<div class="col-4">
			{{#with goodsInfo}}

			<div class="card p-3">
				<img class="card-img-top" src="{{photo}}">
				</img>
				<h4 class="card-title pt-3">
					{{name}}
				</h4>
			</div>
			<div class="card my-3 p-3">
				<b>{{price}}</b>
				{{#if inMarket}}
				<p class="pt-3">Є в наявності</p>
				{{/if}}
				{{#each buttons}}
				{{#if isPrimary}}
				<p><a href="{{link}}" class="btn btn-primary btn-sm py-1">{{text}}</a></p>
				{{/if}}
				{{#if isSecondary}}
				<p><a href="{{link}}" class="btn btn-secondary btn-sm py-1">{{text}}</a></p>
				{{/if}}
				{{/each}}
			</div>
			<div class="card p-3">
				{{#with seller}}
				<p>{{title}} <b>{{value}}</b></p>
				{{/with}}
			</div>

			{{/with}}
		</div>
	</div>

	<hr class="my-5">

	{{/with}}

	{{#each reviewList}}
	{{>reviewItem}}
	{{/each}}

	<div class="text-bg-success p-3">
		{{#with service}}
		<h2 class="text-center">{{title}}</h2>
		<p class="text-center">{{description}}</p>
		{{#each buttons}}
		<div class="text-center">
			<a href="{{link}}" class="btn btn-primary">{{text}}</a>
		</div>
		{{/each}}
		{{/with}}
	</div>

	<hr class="mt-5">

	<div class="nav">
		{{#each footer}}
		<div class="nav-item">
			{{#each this}}
			<a href="{{link}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
			{{/each}}
		</div>
		{{/each}}
	</div>

	<hr class="mb-5">

</div>