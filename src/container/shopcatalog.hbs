<div class="m-3">

	<hr class="mt-5">

	<div class="text-bg-info">
		{{#with navigation}}
		<div class="nav">
			{{#each links}}
			<div class="nav-item">
				<a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
			</div>
			{{/each}}
		</div>
		{{/with}}
	</div>

	<hr class="mb-5">

	{{#each breadcrumb}}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{url}}">{{name}}</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{url}}">{{name}}</a>
		</li>
		<li class="breadcrumb-item">
			{{name}}
		</li>
	</ol>
	{{/each}}

	<h1 class="mt-5 mb-4">{{header}}</h1>
	<div class="row">
		{{#each sortBlock}}
		<div class="col-3 gx-4">
			<select class="form-select">
				{{#with placeholder}}
				<option selected>
					{{this}}
				</option>
				{{/with}}
				{{#each options}}
				<option value="{{value}}">{{text}}</option>
				{{/each}}
			</select>
		</div>
		{{/each}}
	</div>

	<div class="row">
		<div class="col-4">
			<div class="card mt-5 p-3">
				{{#with filterBlock}}

				{{#with sellers}}
				<div class="form-label">
					<h5>{{title}}</h5>
				</div>
				{{#each list}}
				<div class="form-check">
					{{#with value}}
					<label class="form-check-label">
						<p>{{this}}</p>
					</label>
					<input name="seller" type="checkbox" class="form-check-input">
					{{/with}}
				</div>
				{{/each}}
				{{/with}}

				<hr class=" mt-1 mb-3">

				{{#with brands}}
				<label class="form-label">
					<h5>{{title}}</h5>
				</label>
				{{#with input}}
				<input class="form-control mt-1 mb-3" placeholder={{placeholder}}>
				{{/with}}
				{{#each options}}
				{{#with value}}
				<div class="form-check">
					<label class="form-check-label">
						<p>{{this}}</p>
					</label>
					<input name="brand" type="checkbox" class="form-check-input">
				</div>
				{{/with}}
				{{/each}}
				{{/with}}

				<hr class="mt-1 mb-3">

				{{#with price}}
				<label class="form-label">
					<h5>{{title}}</h5>
				</label>
				{{#with range}}
				<input class="form-control mt-1 mb-3" from={{from}}>
				<input class="form-control mt-1 mb-3" to={{to}}>
				{{/with}}
				{{#with button}}
				<a href="{{link}}" class="btn btn-outline-secondary col-4 mt-1 mb-3">{{text}}</a>
				{{/with}}
				{{/with}}

				<hr class="mt-1 mb-3">

				{{#each filterList}}
				{{#with title}}
				<div class=" form label">
					<h5>{{this}}</h5>
				</div>
				{{/with}}
				{{#each options}}
				{{#with value}}
				<div class="form-check">
					<label class="form-check-label">
						{{this}}
					</label>
					<input name="options" type="checkbox" class="form-check-input">
				</div>
				{{/with}}
				{{/each}}
				<hr class="mt-3 mb-3">
				{{/each}}
				{{/with}}
			</div>
		</div>

		<div class="col-4">
			{{#each goodsList}}
			{{>catalogItem}}
			{{/each}}
		</div>
	</div>

	<div class="text-bg-success p-3 mt-5">
		{{#with service}}
		<h2 class="text-center">{{title}}</h2>
		<p class="text-center">{{description}}</p>
		{{#each buttons}}
		<div class="text-center">
			<a href="{{link}}" class="btn btn-primary">{{text}}</a>
		</div>
		{{/each}}
		{{/with}}
	</div>

	<hr class="mt-5">

	<div class="nav text-bg-info">
		{{#each footer}}
		<div class="nav-item">
			{{#each this}}
			<a href="{{link}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
			{{/each}}
		</div>
		{{/each}}
	</div>

	<hr class="mb-5">

</div>