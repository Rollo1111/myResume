{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	{{#with main}}
	<main>
		<section>
			<h1 class="mb-3 mt-2">
				{{> title data='Work history' big=true}}
			</h1>
			<div>
				<ul>
					{{#each works}}
					<li>
						<div class="mb-3">
							{{position}}
						</div>

						<div class="mb-3">
							{{duration.from}} -
							{{#if duration.to}}
							{{duration.to}}
							{{else}}
							(досі працюємо)
							{{/if}}
						</div>

						<div>
							{{#if company.url}}
							{{> link text=company.name href=company.url blank=true noLine=true}}
							{{else}}
							<b>{{company.name}}</b>
							{{/if}}
						</div>

						<h4 class="mb-3 mt-5">
							Projects ({{projectAmount}})
						</h4>

						<ul>
							{{#each projects}}
							<li>
								<div class="mb-3">
									{{> link text=name href=url blank=true noLine=true}}
								</div>

								<h4 class="mb-3 mt-5">{{about}}</h4>

								<div class="my-3">
									<mark>Project stacks ({{stackAmount}})</mark>
								</div>

								<div>
									<ul>
										{{#each stacks}}
										<li class="my-2">
											{{name}}
										</li>
										{{/each}}
									</ul>
								</div>

								<div class="my-3">
									<mark>Project awards ({{awardAmount}})</mark>
								</div>

								<div>
									<ul>
										{{#each awards}}
										<li class="my-2">
											{{name}}
										</li>
										{{/each}}
									</ul>
								</div>
							</li>
							{{/each}}
						</ul>
					</li>
					{{/each}}
				</ul>
			</div>
		</section>
	</main>
	{{/with}}
</div>


