{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
	{{#with web}}

	<div>
		<h1>Languages</h1>
	</div>

	<div>
		<ul>
			{{#each languages}}

			<br>
			<hr>
			<br>

			<li><b>name:</b> {{name}}</li>
			<li><b>version:</b> {{version}}</li>
			<li><b>description:</b> {{description}}</li>

			<div>
				{{#if elements}}
				<b>elements:</b>
				{{/if}}

				<ul>
					{{#each elements}}
					<li><b>name:</b> {{name}}</li>
					<li><b>description:</b> {{description}}</li>
					<il>
						{{#if attributes}}
						<b>attributes:</b>
						{{/if}}
						<ul>
							{{#each attributes}}
							<li><b>name:</b> {{name}}</li>
							<li><b>description:</b> {{description}}</li>
							{{/each}}
						</ul>
					</il>
					{{/each}}
				</ul>
			</div>

			<div>
				{{#if properties}}
				<b>properties:</b>
				{{/if}}

				<ul>
					{{#each properties}}
					<li><b>name:</b> {{name}}</li>
					<li><b>description:</b> {{description}}</li>
					<li>
						{{#if values}}
						<b>values:</b>
						{{/if}}
						<ul>
							{{#each values}}
							<li><b>value:</b> {{value}}</li>
							<li><b>description:</b> {{description}}</li>
							{{/each}}
						</ul>
					</li>
					{{/each}}
				</ul>
			</div>

			<div>
				{{#if functions}}
				<b>functions:</b>
				{{/if}}

				<ul>
					{{#each functions}}
					<li><b>name:</b> {{name}}</li>
					<li><b>description:</b>{{description}}</li>
					<li>
						{{#if parameters}}
						<b>parameters:</b>
						{{/if}}
						<ul>
							{{#each parameters}}
							<li><b>name:</b> {{name}}</li>
							<li><b>type:</b> {{type}}</li>
							<li><b>description:</b> {{description}}</li>
							{{/each}}
						</ul>
					</li>
					{{/each}}
				</ul>
			</div>

			{{/each}}
		</ul>
	</div>

	{{/with}}
</div>


