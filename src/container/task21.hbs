{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-3">
	{{#with heading}}

	<div class="card">
		<div class="card-body">

			{{#with main}}

			<div>
				<h1>{{title}}</h1>
			</div>

			<br>

			<p>{{text}}</p>

			{{#with button_text}}
			<div><button class="btn btn-primary">{{solid}}</button></div>

			<br>

			<div><button class=" btn btn-outline-primary">{{outline}}</button></div>
			{{/with}}

			{{/with}}
		</div>
	</div>

	<br>
	<br>

	<div class="card">
		<div class="card-body">

			{{#with second}}

			<div>
				<h2>{{title}}</h2>
			</div>

			<br>

			<p>{{text}}</p>

			{{#with button_text}}
			<div><button class="btn btn-secondary">{{solid}}</button></div>

			<br>

			<div><button class=" btn btn-outline-secondary">{{outline}}</button></div>
			{{/with}}

			{{/with}}
		</div>
	</div>

	<br>
	<br>

	<div class="card">
		<div class="card-body">

			{{#with subblock}}

			<div>
				<h2>{{title}}</h2>
			</div>

			<br>

			<p>{{text}}</p>

			{{#with button_text}}
			<div><button class="btn btn-dark">{{solid}}</button></div>

			<br>

			<div><button class="btn btn-outline-dark">{{outline}}</button></div>
			{{/with}}

			{{/with}}

			{{/with}}
		</div>
	</div>

	<br>
	<br>

	<div class="card">
		<div class="card-body">

			{{#with nested_display}}

			<div>
				<h3>{{title}}</h3>
			</div>

			<div class="card">
				<div class="card-body">

					{{#with children_display}}

					<div>
						<h4>{{title}}</h4>
					</div>

					<br>

					<p>{{text}}</p>

					{{#with button}}
					<button class=" btn btn-outline-warning">{{text}}</button>
					{{/with}}

					{{/with}}
				</div>
			</div>

			<br>

			<div class="card">
				<div class="card-body">

					<h5>{{header_text}}</h5>

					{{#with button}}
					<button class="btn btn-info">{{text}}</button>
					{{/with}}
				</div>
			</div>

			{{/with}}
		</div>
	</div>

	<br>
	<br>

	<div class="card">
		<div class="card-body">

			{{#with paragraph}}

			<div>
				<h3>{{title}}</h3>
			</div>

			<br>

			<p>{{text}}</p>

			<button class="btn btn-outline-info">
				{{#with button}}
				{{text}} {{url}}
				{{/with}}
			</button>


			<br>
			<br>

			<div class="card">
				<div class="card-body">

					<ul>
						{{#each list_name}}
						<li><button class="btn btn-outline-info btn-link">{{text}} {{url}}</button></li>
						{{/each}}
					</ul>

				</div>
			</div>

		</div>
	</div>

	{{/with}}
</div>


{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}