{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-3">

	<div>
		<button type="button" class="btn btn-primary">Javascript</button>
		<button type="button" class="btn btn-link">Link</button>

		<h1 class="text-bg-primary text-warning mt-3">{{name}} </h1>
	</div>

	<div>
		<p><b>description:</b> {{description}}</p>

		{{#with history}}
		<p><b>year:</b> {{year}}</p>
		<p><b>founder:</b> {{founder}}</p>
		{{/with}}
	</div>

	<div>
		<button type="button" class="btn btn-secondary mt-5">Types of data</button>

		<h3 class="mt-3 mb-3">Types of data</h3>
		<li>{{types}}</li>
	</div>

	<div>
		<button type="button" class="btn btn-success mt-5">Syntax</button>
		<h3 class="mt-3 mb-3">Syntax</h3>
		{{#with syntax}}
		<li>{{variables}}</li>
		<li>{{functions}}</li>
		<li>{{conditionals}}</li>
		<li>{{loops}}</li>
		<li>{{classes}}</li>
		{{/with}}
	</div>

	<div>
		<button type="button" class="btn btn-danger mt-5">Features</button>
		<h3 class="mt-3 mb-3">Features</h3>
		<li>{{features}}</li>
	</div>

	<div>
		<button type="button" class="btn btn-info mt-5">Libraries</button>
		<h3 class="mt-3 mb-3">Libraries</h3>
		<li>{{libraries}}</li>
	</div>

	<div>
		<button type="button" class="btn btn-light">Tools</button>
		<h3>Tools</h3>
		<li>{{tools}}</li>
	</div>

	<div>
		<button type="button" class="btn btn-dark mt-5">Community</button>
		<h3 class="mt-3 mb-3">Community</h3>
		{{#each community}}
		<ul>
			<li><b>name:</b>{{name}}</li>
			<li><b>type:</b>{{type}}</li>
		</ul>
		{{/each}}
	</div>

</div>


