<div class="m-3">

	<hr class="mt-5">

	<div class="text-bg-info">
		{{#with navigation}}
		<div class="nav">
			{{#each links}}
			<div class="nav-item">
				<a href="{{href}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
			</div>
			{{/each}}
		</div>
		{{/with}}
	</div>

	<hr class="mb-5">

	{{#with header}}
	<h1>{{title}}</h1>

	{{#with button}}
	<a href="{{link}}" class="btn btn-outline-dark mb-3 mt-3">{{text}}</a>
	{{/with}}

	{{/with}}

	<hr class="mb-5 mt-5">

	{{#each goodsBlock}}
	{{>cartGoodsItem}}
	{{/each}}

	<hr class="mt-5 mb-5">

	{{#with total}}
	<h2>{{title}}</h2>
	<div class="display-6">{{amount}}</div>
	<div>{{delivery}}</div>
	<div>
		{{#each buttons}}
		<div class="col-4">
			{{#if isSuccess}}
			<a href="{{link}}" class="btn btn-success my-3">{{text}}</a>
			{{/if}}
		</div>
		<div class="col-3">
			{{#if isOutline}}
			<a href="{{link}}" class="btn btn-outline-success">{{text}}</a>
			{{/if}}
		</div>
		{{/each}}
	</div>
	{{/with}}

	<hr class="mt-5 mb-5">

	{{#with goodsOtherBlock}}
	<h2 class="text-center">{{title}}</h2>
	<div class="row">
		{{#each cards}}
		<div class="col-4 g-3">
			<div class="card">
				<img class="card-img-top" src="{{image}}">
				<div class="card-body">
					<h3 class="card-title">
						{{title}}
						{{#if isHot}} <span class="badge rounded-pill text-bg-warning text-uppercase">Hot!</span>{{/if}}
						{{#if idNew}} <span class="badge rounded-pill text-bg-primary">Нове</span>{{/if}}
					</h3>
					<p class="text-bg-secondary">{{description}}</p>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
	{{/with}}

	<hr class="mt-5 mb-5">

	<div class="text-bg-dark p-2">
		{{#with subscribe}}
		<h2 class="mx-2">{{header}}</h2>
		<p class="mx-2">{{description}}</p>
		{{#each buttons}}
		<div>
			<a href="{{link}}" class="btn btn-primary mb-2 mx-2">{{text}}</a>
		</div>
		{{/each}}
		{{/with}}
	</div>

	<hr class="mt-5">

	<div class="nav text-bg-info">
		{{#each footer}}
		<div class="nav-item">
			{{#each this}}
			<a href="{{link}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
			{{/each}}
		</div>
		{{/each}}
	</div>

	<hr class="mt-3">

</div>